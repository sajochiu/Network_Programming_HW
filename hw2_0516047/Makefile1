CC := g++
CPPFLAGS := -g -fPIC -Wall -Wno-unused-variable
BUILD_DIR := build
SRC_DIR := src

all: server

CPP_FILES = $(wildcard $(SRC_DIR)/*.cpp)
OBJ_FILES = $(CPP_FILES:$(SRC_DIR)/%.cpp=$(BUILD_DIR)/%.o)

server:
	$(CC) $(CPPFLAGS) $(OBJ_FILES) -o server

$(BUILD_DIR)/%.o: $(SRC_DIR)/%.cpp
	mkdir -p $(@D)
	$(CC) $(CPPFLAGS) -c %< -o %@

run:
	$(BUILD_DIR)/server 7777

clean:
	rm -rf $(BUILD_DIR)
